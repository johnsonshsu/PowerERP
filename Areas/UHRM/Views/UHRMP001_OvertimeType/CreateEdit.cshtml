@model powererp.Models.OvertimeTypes

@{
    string str_command = (Model.Id == 0) ? "新增" : "修改";
    ViewData["Title"] = $"資料{str_command}";
    Layout = "_LayoutAdmin";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="form-horizontal  mt-2">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.Id)
        @Html.HiddenFor(model => model.BaseNo)
        @Html.HiddenFor(model => model.TypeNo)

        <div class="row form-group">
            <div class="col-md-6">
                <div class="row">
                    <div class="col-md-4">
                        @Html.LabelRequiredFor(model => model.StartHour)
                    </div>
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.StartHour, new { htmlAttributes = new { @class = "form-control" ,
                        @type = "number"} })
                    @Html.ValidationMessageFor(model => model.StartHour, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelRequiredFor(model => model.EndHour)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.EndHour, new { htmlAttributes = new { @class = "form-control" ,
                                        @type = "number"} })
                    @Html.ValidationMessageFor(model => model.EndHour, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    <div class="row form-group">
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelRequiredFor(model => model.Rates)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Rates, new { htmlAttributes = new { @class = "form-control" ,
                                        @type = "number" , @step = "0.01"} })
                    @Html.ValidationMessageFor(model => model.Rates, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-4">
                    @Html.LabelRequiredFor(model => model.Remark)
                </div>
                <div class="col-md-8">
                    @Html.EditorFor(model => model.Remark, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Remark, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_PartialFormSubmit")
</div>
}