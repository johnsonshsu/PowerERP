@model IEnumerable<powererp.Models.Securitys>

@{
    ViewData["Title"] = SessionService.PrgName;
    Layout = "_LayoutAdmin";
    var value = TempData.Get<FormSecurity>("FormSecurity");
    var PrgList = (List<SelectListItem>)ViewBag.PrgList;
}

@await Html.PartialAsync("_PartialFormHeader")

@using (Html.BeginForm("ChangeBaseNo", ActionService.Controller,
new { area = ActionService.Area }, FormMethod.Post, false,
new { id = "baseNoForm", role = "form" }))
{
    <div class="row mx-1 mb-2">
        <div class="col-md-12">
            <div class="float-start pt-2 me-1">
                <span class="control-label fw-bold">程式：</span>
            </div>
            <div class="float-start">
                @Html.DropDownList("BaseNo", PrgList, new { @class = "form-control", onchange = "BaseNoChanged();" })
            </div>
        </div>
    </div>
}

<div class="table-responsive">
    <table class="table table-bordered mb-0">
        <thead class="table-secondary">
            <tr>
                @if (value.IsAddEditDelete && !SessionService.IsReadonlyMode)
                {
                    <th>
                        @await Html.PartialAsync("_PartialFormCreate")
                    </th>
                }
                <th>
                    @Html.DisplayNameSortFor(model => model.TargetNo)
                </th>
                <th class="fixedcolumn">
                    @Html.DisplayNameSortFor(model => model.TargetName)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.RoleNo)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.IsAdd)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.IsEdit)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.IsDelete)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.IsConfirm)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.IsUndo)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.IsCancel)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.IsUpload)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.IsDownload)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.IsPrint)
                </th>
                <th>
                    @Html.DisplayNameSortFor(model => model.Remark)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                SessionService.RowId = item.Id;
                SessionService.RowData = $"{item.TargetNo} {item.TargetName}";
                <tr>
                    @if (value.IsAddEditDelete && !SessionService.IsReadonlyMode)
                    {
                        <td>
                            @await Html.PartialAsync("_PartialFormEdit")
                            @await Html.PartialAsync("_PartialFormDelete")
                        </td>
                    }
                    <td>
                        @Html.DisplayFor(modelItem => item.TargetNo)
                    </td>
                    <td class="fixedcolumn fixedcolumn-data">
                        @Html.DisplayFor(modelItem => item.TargetName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.RoleNo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsAdd)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsEdit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDelete)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsConfirm)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsUndo)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsCancel)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsUpload)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsDownload)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsPrint)
                    </td>
                    <td class="table-wrap">
                        @Html.DisplayFor(modelItem => item.Remark)
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

@section ScriptsBody
{
    <script>
        function BaseNoChanged() {
            $("#baseNoForm").submit();
        }  
    </script>
}