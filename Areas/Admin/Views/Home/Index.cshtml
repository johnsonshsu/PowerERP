            <!-- Recent Activity -->
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">近期活動</h5>
                    <div class="activity">
                        @foreach (var item in calendarList)
                        {
                            <div class="activity-item d-flex">
                                <div class="activite-label">@item.StartTime</div>
                                <i class='bi bi-circle-fill activity-badge text-success align-self-start'></i>
                                <div class="activity-content">
                                    @item.SubjectName
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div><!-- End Recent Activity -->

            <!-- News & Updates Traffic -->
            <div class="card">
                <div class="card-body pb-0">
                    <h5 class="card-title">最新消息</h5>
                    <div class="news">
                        @foreach (var item in newsList)
                        {
                            string str_uid = DateTime.Now.ToString("yyyyMMddHHmmssfff");
                            string img_url = item.ImageUrl + $"?t={str_uid}";
                            <div class="post-item clearfix">
                                <img src="@Url.Content(img_url)" alt="">
                                <h4><a
                                        href="@Url.Action("NewsMessage", ActionService.Controller, new { area = ActionService.Area, id = item.Id })">
                                        @item.PublishDate.ToString("yyyy-MM-dd")
                                        @item.HeaderName</a></h4>
                                <p>@item.ShortDetail</p>
                            </div>
                        }

                    </div>
                    <div class="float-end mb-2">
                        @Html.ActionLink("更多..." , "News" , ActionService.Controller , new {ActionService.Area} , new
                        { @class = "btn btn-secondary btn-sm"})
                    </div>
                </div>
