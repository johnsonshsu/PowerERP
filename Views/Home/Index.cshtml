@{
    ViewData["Title"] = "Home Page";
    Layout = "_Layout";
    int delay = 0;
    string ImagePath = "";
    string filter = "";

    var comp = new z_sqlCompanys();
    var carousel = new z_sqlCarousels();
    var service = new z_sqlServices();
    var teams = new z_sqlTeams();
    var priceing = new z_sqlPricings();
    var priceingDetail = new z_sqlPricingDetails();
    var question = new z_sqlQuestions();
    var photo = new z_sqlPhotos();
    var codedata = new z_sqlCodeDatas();
    var testimonial = new z_sqlTestimonials();

    var company = comp.GetDefaultCompany();
    var carouselModel = carousel.GetDataList();
    var serviceModel = service.GetDataList();
    var teamModel = teams.GetDataList();
    var priceingModel = priceing.GetDataList();
    var priceingDetailModel = priceingDetail.GetDataList();
    var questionModel = question.GetDataList();
    var photoModel = photo.GetDataList();
    var testimonialModel = testimonial.GetDataList();
    var photoNameModel = codedata.GetDropDownList("Photo", false);
    string mapUrl = $"https://maps.google.com/maps?q={company.CompAddress}&t=&z=15&ie=UTF8&iwloc=&output=embed";
}

<!-- Hero Section -->
<section id="hero" class="hero section dark-background">
    <div id="hero-carousel" class="carousel slide carousel-fade" data-bs-ride="carousel" data-bs-interval="5000">
        @foreach (var item in carouselModel)
        {
            ImagePath = $"~/images/carousels/{item.ImageUrl}";
            <div class="carousel-item @(item.IsActive ? "active" : "")">
                <img src="@Url.Content(ImagePath)" alt="">
                <div class="carousel-container">
                    <h2>@item.HeaderName<br></h2>
                    <p>@item.Description</p>
                    <a href="@Url.Content(item.MoreUrl)" class="btn-get-started">更多內容</a>
                </div>
            </div>
            <!-- End Carousel Item -->
        }
        <a class="carousel-control-prev" href="#hero-carousel" role="button" data-bs-slide="prev">
            <span class="carousel-control-prev-icon bi bi-chevron-left" aria-hidden="true"></span>
        </a>
        <a class="carousel-control-next" href="#hero-carousel" role="button" data-bs-slide="next">
            <span class="carousel-control-next-icon bi bi-chevron-right" aria-hidden="true"></span>
        </a>
        <ol class="carousel-indicators"></ol>
    </div>

</section><!-- /Hero Section -->

<!-- About Section -->
<section id="about" class="about section">
    <!-- Section Title -->
    <div class="container section-title" data-aos="fade-up">
        <h2>關於我們</h2>
        <div><span>關於</span> <span class="description-title">@company.ShortName</span></div>
        @Html.Raw(company.AboutusText)
    </div><!-- End Section Title -->
</section><!-- /About Section -->

<!-- Stats Section -->
<section id="stats" class="stats section">
    <div class="container section-title" data-aos="fade-up" data-aos-delay="100">
        <h2>服務經驗</h2>
        <div><span>關於</span> <span class="description-title">本公司服務經驗</span></div>
        <div class="row gy-4">
            <div class="col-lg-3 col-md-6 d-flex flex-column align-items-center">
                <i class="bi bi-emoji-smile"></i>
                <div class="stats-item">
                    <span data-purecounter-start="0" data-purecounter-end="232" data-purecounter-duration="1"
                        class="purecounter"></span>
                    <p>公司客戶數</p>
                </div>
            </div><!-- End Stats Item -->
            <div class="col-lg-3 col-md-6 d-flex flex-column align-items-center">
                <i class="bi bi-journal-richtext"></i>
                <div class="stats-item">
                    <span data-purecounter-start="0" data-purecounter-end="521" data-purecounter-duration="1"
                        class="purecounter"></span>
                    <p>承包專案數</p>
                </div>
            </div><!-- End Stats Item -->
            <div class="col-lg-3 col-md-6 d-flex flex-column align-items-center">
                <i class="bi bi-headset"></i>
                <div class="stats-item">
                    <span data-purecounter-start="0" data-purecounter-end="1463" data-purecounter-duration="1"
                        class="purecounter"></span>
                    <p>服務小時數</p>
                </div>
            </div><!-- End Stats Item -->
            <div class="col-lg-3 col-md-6 d-flex flex-column align-items-center">
                <i class="bi bi-people"></i>
                <div class="stats-item">
                    <span data-purecounter-start="0" data-purecounter-end="75" data-purecounter-duration="1"
                        class="purecounter"></span>
                    <p>服務人員數</p>
                </div>
            </div><!-- End Stats Item -->
        </div>
    </div>
</section><!-- /Stats Section -->

<!-- Features Section -->
<section id="features" class="features section">
