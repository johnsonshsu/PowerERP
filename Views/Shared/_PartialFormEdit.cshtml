@{
    var formSecurity = SessionService.FormSecurity;
    bool bln_valid = (formSecurity == null) ? false : formSecurity.IsEdit;
    if (SessionService.IsReadonlyMode)
    { bln_valid = false; }
    else
    {
        if (AppService.DebugMode)
        { bln_valid = true; }
        else
        {
            if (bln_valid)
            {
                if (SessionService.IsFormLocked || (SessionService.IsConfirmMode && SessionService.IsConfirm) ||
                (SessionService.IsCancelMode && SessionService.IsCancel))
                    bln_valid = false;
            }
        }
    }
}
@if (bln_valid)
{
    @Html.ActionLink(SessionService.GetActionName(enAction.Edit), ActionService.Edit, ActionService.Controller, new
    { area = ActionService.Area, id = SessionService.RowId }, new
    { @class = "btn btn-success" })
}