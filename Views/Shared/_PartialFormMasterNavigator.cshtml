@{
    int int_page = SessionService.PageMaster;
    int int_pageCount = SessionService.PageCountMaster;
    string str_button = "btn btn-secondary";
    string str_list = "btn btn-info";
    string str_class = str_button;
}
@{
    str_class = (int_pageCount > 0) ? str_list : str_list + " disabled";
}
@Html.ActionLink(SessionService.GetActionName(enAction.List), ActionService.List, ActionService.Controller,
new { area = ActionService.Area },
new { @class = str_class })
@{
    str_class = (int_page <= 1) ? str_button + " disabled" : str_button;
}
