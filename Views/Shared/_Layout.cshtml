@{
  ViewData["Title"] = "首頁";
  string loginText = (SessionService.IsLogin) ? "登出系統" : "登入系統";
  string userInfo = (SessionService.IsLogin) ? "登入者：" + SessionService.UserNo + " " + SessionService.UserName : "遊客";
  string appInfo = $"{AppService.AppName}";
  using var comp = new z_sqlCompanys();
  var service = new z_sqlServices();
  var serviceModel = service.GetDataList();
  var company = comp.GetDefaultCompany();
}

<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta content="width=device-width, initial-scale=1.0" name="viewport">
  <title>@appInfo - @ViewData["Title"]</title>
  <meta name="description" content="">
  <meta name="keywords" content="">

  <!-- Favicons -->
  <link href="@Url.Content("~/lib/multi/assets/img/favicon.png")" rel="icon">
  <link href="@Url.Content("~/lib/multi/assets/img/apple-touch-icon.png")" rel="apple-touch-icon">

  <!-- Fonts -->
  <link href="https://fonts.googleapis.com" rel="preconnect">
  <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
  <link
    href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Poppins:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap"
    rel="stylesheet">

  <!-- Vendor CSS Files -->
  <link href="@Url.Content("~/lib/jqueryui/themes/base/jquery-ui.min.css")" rel="stylesheet" />
  <link href="@Url.Content("~/lib/multi/assets/vendor/bootstrap/css/bootstrap.min.css")" rel="stylesheet">
  <link href="@Url.Content("~/lib/multi/assets/vendor/bootstrap-icons/bootstrap-icons.css")" rel="stylesheet">
  <link href="@Url.Content("~/lib/multi/assets/vendor/aos/aos.css")" rel="stylesheet">
  <link href="@Url.Content("~/lib/toastr.js/toastr.min.css")" rel="stylesheet" />
  <link href="@Url.Content("~/lib/multi/assets/vendor/swiper/swiper-bundle.min.css")" rel="stylesheet">
  <link href="@Url.Content("~/lib/multi/assets/vendor/glightbox/css/glightbox.min.css")" rel="stylesheet">
  <link href="https://cdn.ckeditor.com/ckeditor5/43.3.1/ckeditor5.css" rel="stylesheet" />

  <!-- Main CSS File -->
  <link href="@Url.Content("~/lib/multi/assets/css/main.css")" rel="stylesheet">
  @await RenderSectionAsync("Styles", required: false)

  <!-- Vendor JS Files -->
  <script src="@Url.Content("~/lib/jquery/dist/jquery.min.js")"></script>
  <script src="@Url.Content("~/lib/jqueryui/jquery-ui.min.js")"></script>
  <script src="@Url.Content("~/lib/multi/assets/vendor/bootstrap/js/bootstrap.bundle.min.js")"></script>
  <script src="@Url.Content("~/lib/multi/assets/vendor/php-email-form/validate.js")"></script>
  <script src="@Url.Content("~/lib/multi/assets/vendor/aos/aos.js")"></script>
  <script src="@Url.Content("~/lib/multi/assets/vendor/purecounter/purecounter_vanilla.js")"></script>
  <script src="@Url.Content("~/lib/multi/assets/vendor/swiper/swiper-bundle.min.js")"></script>
  <script src="@Url.Content("~/lib/multi/assets/vendor/glightbox/js/glightbox.min.js")"></script>
  <script src="@Url.Content("~/lib/multi/assets/vendor/imagesloaded/imagesloaded.pkgd.min.js")"></script>
  <script src="@Url.Content("~/lib/multi/assets/vendor/isotope-layout/isotope.pkgd.min.js")"></script>
  <script src="@Url.Content("~/lib/toastr.js/toastr.min.js")"></script>
  @await RenderSectionAsync("Scripts", required: false)
